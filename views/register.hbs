<div id="container">
	<div class="mdl-grid">
		<div class="mdl-cell mdl-cell--12-col">
			<h1 class="text-center login-title">Registration Details</h1>
		</div>
	</div>
	<div class="mdl-grid signup-wall">
		<form class="form-signin" action="/signup" method="POST">
			<div class="mdl-cell mdl-cell-6-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
					<input class="mdl-textfield__input" type="text" name="username" id="username" required="required">
					<label class="mdl-textfield__label" for="username">Gamertag...</label>
				</div>
			</div>
			<div class="mdl-cell mdl-cell-6-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
				<input class="form-control nomargin" type="password" name="password" placeholder="Password" required="required"/>
			</div>
			<div class="mdl-cell mdl-cell-6-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
				<input class="form-control" type="email" name="email" placeholder="Email" required="required"/>
			</div>
			<div class="mdl-cell mdl-cell-6-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
				<input class="form-control" type="text" name="city" placeholder="City" required="required"/>
			</div>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
		</form>
	</div>
	<div id="message">
		{{message}}
	</div>
</div>

<script src="/dialog/dialog-polyfill.js"></script>
<script src="/dialog/suite.js"></script>