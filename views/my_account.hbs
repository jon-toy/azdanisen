<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div id="user">
				<h1 class="text-center login-title">Welcome {{user.username}}. Check your details below:
				<div class="signup-wall">
					<ul class="user-details">
					<li>Username : {{user.username}}</li>
					<li>Email    : {{user.email}}</li>
					<li>City     : {{user.city}}</li>
					</ul>
				</div>
				<a class="text-center new-account" href="/signout">Sign Out</a>
				<a class="text-center" href="/delete">Delete my account</a>
				</h1>
			</div>
		</div>
	</div>
</div>